header.header
  nav.nav nav--tours
    a.nav__el(href='/') All Restraunts
  .header__logo
    img(src='/img/logo-white.png' alt='Natours logo')
  nav.nav nav--user
    
    if user
      a.nav__el.nav__el--logout logout 
      a.nav__el(href='/search/me')
        img.nav__user-img(src='/img/users/user-1.jpg' alt='User Photo')
        span=user.name.split(' ')[0]
    else  
      a.nav__el(href='/search/login') login
      a.nav__el.nav__el--cta(href='/search/signup') signup 
