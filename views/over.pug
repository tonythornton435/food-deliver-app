extends base

block content

  .main.main
    .card-container 
      each i in rest.locations
        .card
          .card__header
            .card__picture
              .card__picture-overlay &nbsp;
              img.card__picture-img(src=`/img/tours/${i.images}`, alt=`${i.name}`)
            h3.heading-tertirary
              span=i.name

          .card__details
            h4.card__sub-heading=`${i.price} ${i.Contact}`
            p.card__text=i.summary
            .card__data
              svg.card__icon
                use(xlink:href='/img/icons.svg#icon-map-pin')
              span=i.Place
            .card__data
              svg.card__icon
                use(xlink:href='/img/icons.svg#icon-calendar')
              span April 2021
            .card__data
              svg.card__icon
                use(xlink:href='/img/icons.svg#icon-flag')
              span 3 stops
            .card__data
              svg.card__icon
                use(xlink:href='/img/icons.svg#icon-user')
              span 25 people

          .card__footer
            p
              span.card__footer-value $297
              span.card__footer-text per person
            p.card__ratings
              span.card__footer-value 4.9
              span.card__footer-text rating (21)
            a.btn.btn--green.btn--small(href=`/search/tour/${i.name}`) Details
